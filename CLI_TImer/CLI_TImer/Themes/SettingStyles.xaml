                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border x:Name="ItemContainer"
                            Background="{x:Static color:Colors.Secondary}"
                            CornerRadius="10"
                            Margin="0, 0, 0, 10">
                        <ContentPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
