<Window x:Class="CLI_TImer.MVVM.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLI_TImer.MVVM.View"
        xmlns:viewModel="clr-namespace:CLI_TImer.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>

        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg" CornerRadius="5">

                            <ContentPresenter/>

                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" 
                                     Value="True">

                                <Setter Property="Background" 
                                        Value="{StaticResource PrimaryColor}"
                                        TargetName="bg"/>

                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Side Panel-->
        <Border x:Name="SideBar"
                Grid.Column="0"
                Background="{StaticResource TopBarColor}"
                Width="50">

            <StackPanel HorizontalAlignment="Right">

                <ToggleButton
                    Width="30"
                    Height="30"
                    Margin="0, 5, 10, 0"
                    Background="Transparent"
                    BorderThickness="0"
                    Style="{StaticResource ToggleButtonStyle}">

                    <Image Style="{StaticResource BurgerMenu}" 
                           x:Name="BurgerImage"
                           Margin="0, 0, 0, 0">

                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Image.RenderTransform>

                    </Image>

                    <ToggleButton.Triggers>
                        <!--Unfold Sidebar-->
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="BurgerImage"
                                                        Storyboard.TargetProperty="Margin"
                                                        From="0, 0, 0, 0" To="0, 0, 0, 0"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="1" To="0.5"
                                                     Duration="0:0:0.1"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="0.5" To="1"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.3"/>

                                    <DoubleAnimation Storyboard.TargetName="SideBar"
                                                     Storyboard.TargetProperty="Width"
                                                     From="50" To="150"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!--Retract Sidbar-->
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            
                            <BeginStoryboard>
                                
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="BurgerImage"
                                                        Storyboard.TargetProperty="Margin"
                                                        From="0, 0, 0, 0" To="15, 0, -15, 0"
                                                        Duration="0:0:0.1"
                                                        BeginTime="0:0:0"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="1" To="0.5"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0"/>

                                    <ThicknessAnimation Storyboard.TargetName="BurgerImage"
                                                        Storyboard.TargetProperty="Margin"
                                                        From="15, 0, -15, 0" To="0, 0, 0, 0"
                                                        Duration="0:0:0.1"
                                                        BeginTime="0:0:0.3"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="0.5" To="1"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.3"/>

                                    <DoubleAnimation Storyboard.TargetName="SideBar"
                                                     Storyboard.TargetProperty="Width"
                                                     From="150"
                                                     To="50"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>

                </ToggleButton>

            </StackPanel>

        </Border>

        <ContentControl Margin="5"
                        Grid.Column="1"
                        Content="{Binding CurrentView}"/>

    </Grid>
</Window>
