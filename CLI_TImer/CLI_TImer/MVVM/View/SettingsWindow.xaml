<Window x:Class="CLI_TImer.MVVM.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLI_TImer.MVVM.View"
        xmlns:viewModel="clr-namespace:CLI_TImer.MVVM.ViewModel"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>

        <Style x:Key="BurgerMenuTb" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg" CornerRadius="5">

                            <ContentPresenter/>

                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" 
                                     Value="True">

                                <Setter Property="Background" 
                                        Value="{StaticResource PrimaryColor}"
                                        TargetName="bg"/>

                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavigationTb" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Padding" Value="1"/>
            <Setter Property="Margin" Value="0, 0, 5, 5"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="bg" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--Side Panel-->
        <Border x:Name="SideBar"
                Grid.Column="0"
                Background="{StaticResource TopBarColor}"
                Width="50">

            <StackPanel HorizontalAlignment="Left">

                <!--Burger Menu Button-->
                <ToggleButton
                    Width="30"
                    Height="30"
                    Margin="10, 5, 10, 0"
                    Background="Transparent"
                    BorderThickness="0"
                    Style="{StaticResource BurgerMenuTb}"
                    HorizontalAlignment="Left">

                    <Image Style="{StaticResource BurgerMenu}" 
                           x:Name="BurgerImage"
                           Margin="0, 0, 0, 0">

                        <Image.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Image.RenderTransform>

                    </Image>

                    <ToggleButton.Triggers>
                        <!--Unfold Sidebar-->
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="BurgerImage"
                                                        Storyboard.TargetProperty="Margin"
                                                        From="0, 0, 0, 0" To="0, 0, 0, 0"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="1" To="0.5"
                                                     Duration="0:0:0.1"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="0.5" To="1"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.1"/>

                                    <DoubleAnimation Storyboard.TargetName="SideBar"
                                                     Storyboard.TargetProperty="Width"
                                                     From="50" To="155"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>

                        <!--Retract Sidbar-->
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            
                            <BeginStoryboard>
                                
                                <Storyboard>
                                    <ThicknessAnimation Storyboard.TargetName="BurgerImage"
                                                        Storyboard.TargetProperty="Margin"
                                                        From="0, 0, 0, 0" To="15, 0, -15, 0"
                                                        Duration="0:0:0.1"
                                                        BeginTime="0:0:0"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="1" To="0.5"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0"/>

                                    <ThicknessAnimation Storyboard.TargetName="BurgerImage"
                                                        Storyboard.TargetProperty="Margin"
                                                        From="15, 0, -15, 0" To="0, 0, 0, 0"
                                                        Duration="0:0:0.1"
                                                        BeginTime="0:0:0.1"/>

                                    <DoubleAnimation Storyboard.TargetName="BurgerImage"
                                                     Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                     From="0.5" To="1"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.1"/>

                                    <DoubleAnimation Storyboard.TargetName="SideBar"
                                                     Storyboard.TargetProperty="Width"
                                                     From="155"
                                                     To="50"
                                                     Duration="0:0:0.1"
                                                     BeginTime="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>

                </ToggleButton>


                <!--Navigation Buttons-->
                <StackPanel Background="Transparent" Margin="5, 20, 0, 0">

                    <ToggleButton Style="{StaticResource NavigationTb}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
                                     Stretch="Uniform"
                                     Width="30"
                                     Height="30"
                                     Grid.Column="0">
                                <Canvas Name="svg12" Width="960" Height="960">
                                    <Canvas.RenderTransform>
                                        <TranslateTransform X="0" Y="-96"/>
                                    </Canvas.RenderTransform>
