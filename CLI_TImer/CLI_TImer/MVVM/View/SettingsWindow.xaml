                                    </Path>
                                </Canvas>
                            </Viewbox>

                            <Label Content="General Settings"
                                   Grid.Column="1"
                                   Foreground="{StaticResource PrimaryTextColor}"
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                        </Grid>
                    </ToggleButton>



                </StackPanel>

