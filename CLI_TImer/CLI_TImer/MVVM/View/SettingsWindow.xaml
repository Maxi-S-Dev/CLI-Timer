<Window x:Class="CLI_Timer.MVVM.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLI_Timer.MVVM.View"
        xmlns:viewModel="clr-namespace:CLI_Timer.MVVM.ViewModel"
        xmlns:theme="clr-namespace:CLI_Timer.Themes"
        xmlns:contol="clr-namespace:CLI_Timer.Controls"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>

        <Style x:Key="BurgerMenuTb" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg" CornerRadius="5">

                            <ContentPresenter/>

                        </Border>

                        <ControlTemplate.Triggers>

                            <Trigger Property="IsMouseOver" 
                                     Value="True">

                                <Setter Property="Background" 
                                        Value="{StaticResource PrimaryColor}"
                                        TargetName="bg"/>

                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavigationTb" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0, 0, 0, 5"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" 
                                Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
                                CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="bg" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="{x:Static theme:Colors.Background}"
            CornerRadius="10">

        <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--Top Bar-->
            <contol:CustomTopBar Title="CLI-Timer Settings"
                                 CloseClicked="Close"
                                 LeftMouseDown="DragWindow" 
                                 Grid.ColumnSpan="2"/>

            <!--Side Panel-->
                <Border x:Name="SideBar"
                        Grid.Column="0"
                        Grid.Row="1"
                        Background="{x:Static theme:Colors.Secondary}"
                        Width="50">

                    <StackPanel HorizontalAlignment="Left">

                        <!--Burger Menu Button-->
                        <ToggleButton Width="50"
                                      Height="50"
                                      Margin="0, 5, 0, 0"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Style="{StaticResource NavigationTb}"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center">

                            <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                     Stretch="Uniform"
                                     x:Name="vb"
                                     Width="35"
                                     Height="35"
                                     Margin="0, -6.5, 0, 0">
                                <Canvas Name="svg4"
                                        Width="960"
                                        Height="960"
                                        Margin="0, 0, 0, 0">
                                    <Canvas.RenderTransform>
                                        <ScaleTransform ScaleX="1"
                                                        ScaleY="1" />
                                    </Canvas.RenderTransform>
                                    <Canvas.Resources />
                                    <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                          Name="path2"
                                          Fill="White">
                                        <Path.Data>
                                            <PathGeometry Figures="M150 822.696q-14.424 0-24.245-9.871-9.82-9.871-9.82-24.37 0-14.498 9.82-24.194 9.821-9.696 24.245-9.696h660q14.424 0 24.245 9.871 9.82 9.871 9.82 24.37 0 14.498-9.82 24.194-9.821 9.696-24.245 9.696H150Zm0-212.631q-14.424 0-24.245-9.871-9.82-9.871-9.82-24.369 0-14.499 9.82-24.195 9.821-9.695 24.245-9.695h660q14.424 0 24.245 9.871 9.82 9.871 9.82 24.369 0 14.499-9.82 24.195-9.821 9.695-24.245 9.695H150Zm0-212.63q-14.424 0-24.245-9.871-9.82-9.871-9.82-24.37 0-14.498 9.82-24.314 9.821-9.815 24.245-9.815h660q14.424 0 24.245 9.991 9.82 9.99 9.82 24.489 0 14.498-9.82 24.194-9.821 9.696-24.245 9.696H150Z"
                                                          FillRule="NonZero" />
                                        </Path.Data>
                                    </Path>
                                </Canvas>
                            </Viewbox>

                            <ToggleButton.Triggers>
                                <!--Unfold Sidebar-->
                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetName="vb"
                                                                Storyboard.TargetProperty="Margin"
                                                                From="0, 0, 0, 0"
                                                                To="0, 0, 0, 0" />

                                            <DoubleAnimation Storyboard.TargetName="svg4"
                                                             Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                             From="1"
                                                             To="0.5"
                                                             Duration="0:0:0.1" />

                                            <DoubleAnimation Storyboard.TargetName="svg4"
                                                             Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                             From="0.5"
                                                             To="1"
                                                             Duration="0:0:0.1"
                                                             BeginTime="0:0:0.1" />

                                            <DoubleAnimation Storyboard.TargetName="SideBar"
                                                             Storyboard.TargetProperty="Width"
                                                             From="50"
                                                             To="160"
                                                             Duration="0:0:0.1"
                                                             BeginTime="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>

                                <!--Retract Sidbar-->
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">

                                    <BeginStoryboard>

                                        <Storyboard>
                                            <ThicknessAnimation Storyboard.TargetName="vb"
                                                                Storyboard.TargetProperty="Margin"
                                                                From="0, 0, 0, 0"
                                                                To="15, 0, -15, 0"
                                                                Duration="0:0:0.1"
                                                                BeginTime="0:0:0" />

                                            <DoubleAnimation Storyboard.TargetName="svg4"
                                                             Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                             From="1"
                                                             To="0.5"
                                                             Duration="0:0:0.1"
                                                             BeginTime="0:0:0" />

                                            <ThicknessAnimation Storyboard.TargetName="vb"
                                                                Storyboard.TargetProperty="Margin"
                                                                From="15, 0, -15, 0"
                                                                To="0, 0, 0, 0"
                                                                Duration="0:0:0.1"
                                                                BeginTime="0:0:0.1" />

                                            <DoubleAnimation Storyboard.TargetName="svg4"
                                                             Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                             From="0.5"
                                                             To="1"
                                                             Duration="0:0:0.1"
                                                             BeginTime="0:0:0.1" />

                                            <DoubleAnimation Storyboard.TargetName="SideBar"
                                                             Storyboard.TargetProperty="Width"
                                                             From="160"
                                                             To="50"
                                                             Duration="0:0:0.1"
                                                             BeginTime="0:0:0.1" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ToggleButton.Triggers>

                        </ToggleButton>


                        <!--Navigation Buttons-->
                        <StackPanel Background="Transparent"
                                    Margin="0, 20, 0, 0">

                            <!--General Settings-->
                            <ToggleButton Style="{StaticResource NavigationTb}"
                                          Command="{Binding ShowStartupSettingsCommand}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <Viewbox xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                             Stretch="Uniform"
                                             Width="30"
                                             Height="30"
                                             Grid.Column="0"
                                             HorizontalAlignment="Center">
                                        <Canvas Name="svg12"
                                                Width="960"
                                                Height="960">
                                            <Canvas.RenderTransform>
                                                <TranslateTransform X="0"
                                                                    Y="-96" />
                                            </Canvas.RenderTransform>
                                            <Canvas.Resources />

                                            <Path xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                                  Name="path10"
                                                  Fill="#FFFFFFFF">
